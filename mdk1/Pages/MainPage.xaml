<Page x:Class="mdk1.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:mdk1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Ввод / Редактирование справочная таблица" Margin="5" Click="Button_Click"/>
            <Button Content="Ввод / Редактирование учетная таблица" Margin="5" Click="Button_Click_1"/>
            <Button Content="Вычисления" Margin="5"/>
            <Button Content="Excel" Margin="5" Click="Button_Click_2"/>
            <Button Content="PDF" Margin="5" Click="Button_Click_3"/>
            <Button Content="Выход" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
